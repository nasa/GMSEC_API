GMSEC_API_HOME=../../..

include $(GMSEC_API_HOME)/config/$(GMSEC_PLATFORM)

CXXFLAGS += -I$(GMSEC_API_HOME)/include


.PHONY: default all checkDefs clean


default all: checkDefs $(TARGET)


clean: checkDefs
	$(RM) $(TARGET)


checkDefs:
	@ if [ -z $(TARGET) ]; then \
		echo "TARGET is not defined"; \
		exit 1; \
	fi


$(TARGET): $(SRCS)
	$(CXX) $(CXXFLAGS) $^ $(LDFLAGS) -o $@
